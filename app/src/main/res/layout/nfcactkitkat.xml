<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bannerdgp"
        android:contentDescription="@string/str_logo_desc"
        android:src="@drawable/banner_dgp_red"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/fondo_800_dnie">

        <ImageView
            android:id="@+id/resultimg"
            android:visibility="visible"
            android:adjustViewBounds="true"
            android:src="@drawable/boton_aproxdnie"
            android:contentDescription="@string/str_logo_desc"
            android:layout_gravity="center_horizontal"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_marginTop="180dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/result1"
            android:visibility="visible"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/op_dgtinit2"
            android:textColor="#0B5D8D"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/resultimg" />

        <TextView
            android:id="@+id/resultinfo"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="@string/op_dgtinit2"
            android:textColor="#0B5D8D"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/result1"/>

        <Button
            android:id="@+id/butVolver"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/xmlopcion_w_volver"
            android:layout_marginBottom="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"/>

        <Button
            android:id="@+id/butConfigurar"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:background="@drawable/xmlopcion_w_config"
            android:layout_marginRight="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>